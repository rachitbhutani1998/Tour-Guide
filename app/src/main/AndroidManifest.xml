<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tourguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".category" />
        <activity
            android:name=".restaurants"
            android:label="@string/restaurants"
            android:logo="@mipmap/ic_launcher" />
        <activity
            android:name=".hotels"
            android:label="@string/hotels" />
        <activity
            android:name=".touristSpots"
            android:label="@string/tourist" />
        <activity
            android:name=".clubs"
            android:label="@string/club" />
        <activity
            android:name=".cinemas"
            android:label="@string/cinemas" />
    </application>

</manifest>